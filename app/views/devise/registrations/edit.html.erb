<div class="row">
  <div class="col-xs-12">
    <h1 class="page-header" itemprop="name"></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well bs-component">
      <%= form_for resource, method: 'put' do |f| %>
        <fieldset>
          <legend>Change account details</legend>
          <% devise_error_messages! %>

          <div class="form-group">
            <%= f.label :email %><br>
            <%= f.email_field :email, class: 'form-control', readonly: false %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.label :current_password %> <br>
            <%= f.password_field :current_password, autocomplete: false,
                                 autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <p class="small help-block">
              Prove that you're the owner of this account.
            </p>
            <%= f.label :password %><br>
            <%= f.password_field :password, autocomplete: false,
                                 class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br>
            <%= f.password_field :password_confirmation, autocomplete: false,
                                 class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit 'Change my password', class: 'btn btn-primary' %>
          </div>
        </fieldset>
      <% end %>
    </div><!-- /.well -->
  </div>
  <div class="col-md-3">
    <p class="small help-block">
      <strong>To change your email address</strong> provide the new email
      address and your current password. Leave the fields
      <strong>password</strong> and <strong>password confirmation</strong>
      blank.
    </p>
  </div>
</div>
