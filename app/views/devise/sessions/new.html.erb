<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="page-header" itemprop="name"><%=t 'page.log_in.title' %></h1>

    <%= form_for resource, as: resource_name,
                          url: session_path(resource_name) do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control', autofocus: true,
        placeholder: t('page.log_in.form.label.email') %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: 'form-control', autocomplete: 'off',
        placeholder: t('page.log_in.form.label.password') %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %> <%= t 'page.log_in.form.label.remember_me' %>
        <% end %>
      </div>
      <% end -%>

      <%= f.submit "Log in", class: 'btn btn-lg btn-primary center-block' %>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t('page.log_in.form.label.forgot_password?'),
                  new_password_path(resource_name) %><br />
    <% end -%>
  </div>
</div>
