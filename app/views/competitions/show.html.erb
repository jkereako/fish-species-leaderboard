<article class="">
  <header role="heading">
    <h1 class="page-header" itemprop="name">
      <%= @competition.name %>
    </h1>
  </header>
    <div class="row">
      <div class="col-sm-6">
        <h2>Prize</h2>
        <p>
          <%= @competition.prize %>
        </p>
        <h2>Start</h2>
        <p>
          <%= @competition.begins_at %>
        </p>
        <h2>End</h2>
        <p>
          <%= @competition.ends_at %>
        </p>
      </div>
      <div class="col-sm-6">
        <h2>Competitors</h2>
        <table class="table">
          <thead>
            <tr>
              <th>
                Name
              </th>
              <th>
                Catches
              </th>
            </tr>
          </thead>
          <tbody>
          <% @competition.users.each do |competitor| %>
          <tr>
            <th>
              <%= link_to competitor.name, competitor %>
            </th>
            <th>
              <%= competitor.catches.count %>
            </th>
          </tr>

          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <footer>
    <p>
      <% if policy(:competition).edit? %>
      <%= link_to 'Edit', edit_competition_path(@competition) %> |
      <% end %>
      <%= link_to 'Back', competitions_path %>
    </p>
  </footer>
</article>
