<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to competition.name, competition_path(competition) %></h3>
  </div>
  <div class="panel-body">
    <h4>
      Began on <%= competition.begins_at.to_formatted_s :month_day_year %>
      <small><%= (competition.ends_at - competition.begins_at) %> days left</small>
    </h4>

    <table class="table">
      <thead>
        <th></th>
        <th>Competitor</th>
        <th>Catches</th>
        <th>Last catch made</th>
      </thead>
      <tbody>
        <%= render partial: 'competitor', collection: competition.users %>
      </tbody>
    </table>
  </div>
</div>
